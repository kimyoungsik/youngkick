				<td><%= best_in_place @user, :favorite_player %></td>
				<td><%= best_in_place @user, :favorite_club %></td>
				<td><%= best_in_place @user, :team_name %></td>
				<td><%= best_in_place @user, :foot %></td>
				<td><%= best_in_place @user, :address %></td>
				<% else %>					
					<td><%= @user.favorite_player %></td>
					<td><%= @user.favorite_club %></td>
					<td><%= @user.team_name %></td>
					<td><%= @user.foot %></td>
					<td><%= @user.address %></td>
				<% end %>
      </tr>
		
  </tbody>
</table>


